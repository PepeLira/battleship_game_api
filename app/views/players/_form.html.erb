<%= form_with(model: player) do |form| %>
  <% if player.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
        <% player.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :auth_key, style: "display: block" %>
    <%= form.text_field :auth_key %>
  </div>

  <div>
    <%= form.label :n_win_games, style: "display: block" %>
    <%= form.number_field :n_win_games %>
  </div>

  <div>
    <%= form.label :n_lose_games, style: "display: block" %>
    <%= form.number_field :n_lose_games %>
  </div>

  <div>
    <%= form.label :n_played_games, style: "display: block" %>
    <%= form.number_field :n_played_games %>
  </div>

  <div>
    <%= form.label :n_bonifications, style: "display: block" %>
    <%= form.number_field :n_bonifications %>
  </div>

  <div>
    <%= form.label :n_effectiveness, style: "display: block" %>
    <%= form.number_field :n_effectiveness %>
  </div>

  <div>
    <%= form.label :turns_mean_of_games, style: "display: block" %>
    <%= form.number_field :turns_mean_of_games %>
  </div>

  <div>
    <%= form.label :mean_of_misses_by_game, style: "display: block" %>
    <%= form.number_field :mean_of_misses_by_game %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
